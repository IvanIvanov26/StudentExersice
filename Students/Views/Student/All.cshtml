@model List<StudentViewModel>

<h1>All stidents info:</h1>
<hr />

<table class="table table-hover">
    <tr>
        <th>Name:</th>
        <th>Phone:</th>
        <th>Addres:</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td> <a asp-controller="Student" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            <td> <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            <td> <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

        </tr>
    }
</table>